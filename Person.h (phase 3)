#ifndef PERSON_H
#define PERSON_H

#include <string>
using namespace std;

class Person {
private:
    int id;
    string name;
    string password;

public:
   
    Person(int id, const string& name, const string& password);

   
    int getId() const;
    string getName() const;

    
    string getPassword() const;
    void setPassword(const string& newPassword);   // Password update

   
    virtual ~Person() {}
};

#endif
